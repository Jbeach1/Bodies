@inherits LayoutComponentBase
@using MudBlazor;

<PageTitle>Bodies</PageTitle>

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@code {
    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = "#FFFFFF",
                Secondary = "#ff0000",
                Background = "#000000",
                TextPrimary = "#FFFFFF",
                TextDisabled = "#FFFFFF",
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "valium" }
                }
            }
        };
}